<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MasalaFoodApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nav_selected_text_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <!-- custom style-->

    <!-- nav bottom style-->
    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width" tools:ignore="PrivateResource">
            56dp
        </item>
        <item name="android:height" tools:ignore="PrivateResource">
            32dp
        </item>
        <item name="marginHorizontal" tools:ignore="PrivateResource">
            @dimen/m3_bottom_nav_item_active_indicator_margin_horizontal
        </item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/nav_selected_item</item>
    </style>
    <!-- button style-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <!-- primary button style-->
    <style name="Button.PrimaryButton">
        <item name="android:backgroundTint">@color/primary_button_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- secondary button style-->
    <style name="Button.SecondaryButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/primary_button_color</item>
        <item name="strokeWidth">@dimen/small_stroke</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <!-- chips style-->
    <style name="Chips_filter" parent="Widget.Material3.ChipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/text_chips</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="chipCornerRadius">@dimen/radius_small</item>
        <item name="chipEndPadding">@dimen/margin_large</item>
        <item name="chipStartPadding">@dimen/margin_large</item>
        <item name="android:checkable">true</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">@dimen/small_stroke</item>
    </style>
    <!-- chips style-->
    <style name="Chips" parent="Widget.Material3.ChipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_chips</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="chipCornerRadius">@dimen/radius_small</item>
    </style>
    <!-- selected chips style-->
    <style name="Chips.SelectedChips">
        <item name="android:backgroundTint">@color/selected_chip_color</item>
    </style>
    <!-- non selected chips style-->
    <style name="Chips.NonSelectedChips">
        <item name="chipStrokeWidth">@dimen/small_stroke</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="chipStrokeColor">@color/non_selected_chip_stroke_color</item>
    </style>

    <!--card view-->
    <style name="CardViewFood" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardElevation">@dimen/elevation_small</item>
    </style>
    <!--card Fav-->
    <style name="CardViewFood.Fav">
        <item name="cardCornerRadius">@dimen/radius_large</item>
    </style>
    <!--card Kitchen-->
    <style name="CardViewFood.Kitchen">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>
    <!--card choose-->
    <style name="CardViewFood.ChooseKitchen">
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <!--card popular-->
    <style name="CardViewPopular" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardElevation">@dimen/elevation_small</item>
    </style>
    <!--card popular Right-->
    <style name="CardViewPopular.Right" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
    </style>
    <!--card popular Left-->
    <style name="CardViewPopular.Left">
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
    </style>
</resources>