<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MasalaFoodApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nav_selected_text_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <!-- custom style-->

    <!-- nav bottom style-->
    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width" tools:ignore="PrivateResource">
            56dp
        </item>
        <item name="android:height" tools:ignore="PrivateResource">
            32dp
        </item>
        <item name="marginHorizontal" tools:ignore="PrivateResource">
            @dimen/m3_bottom_nav_item_active_indicator_margin_horizontal
        </item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/nav_selected_item</item>
    </style>
    <!-- button style-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <!-- primary button style-->
    <style name="Button.PrimaryButton">
        <item name="android:backgroundTint">@color/primary_button_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- secondary button style-->
    <style name="Button.SecondaryButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/primary_button_color</item>
        <item name="strokeWidth">@dimen/small_stroke</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>
    <!-- chips style-->
    <style name="Chips_filter" parent="Widget.Material3.ChipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/text_chips</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="chipCornerRadius">@dimen/radius_small</item>
        <item name="chipEndPadding">@dimen/margin_large</item>
        <item name="chipStartPadding">@dimen/margin_large</item>
        <item name="android:checkable">true</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">@dimen/small_stroke</item>
    </style>
    <!-- chips style-->
    <style name="Chips" parent="Widget.Material3.ChipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_chips</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="chipCornerRadius">@dimen/radius_small</item>
    </style>
    <!-- selected chips style-->
    <style name="Chips.SelectedChips">
        <item name="android:backgroundTint">@color/selected_chip_color</item>
    </style>
    <!-- non selected chips style-->
    <style name="Chips.NonSelectedChips">
        <item name="chipStrokeWidth">@dimen/small_stroke</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="chipStrokeColor">@color/non_selected_chip_stroke_color</item>
    </style>

    <!--card view-->
    <style name="CardViewFood" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardElevation">@dimen/elevation_small</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/text_light</item>
    </style>
    <!--card Fav-->
    <style name="CardViewFood.Fav">
        <item name="cardCornerRadius">@dimen/radius_large</item>
    </style>
    <!--card Kitchen-->
    <style name="CardViewFood.Kitchen">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>
    <!--card choose-->
    <style name="CardViewFood.ChooseKitchen">
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">16dp</item>
    </style>
    <!--card popular-->
    <style name="CardViewPopular" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/CardRadius</item>
    </style>
    <!--card radius-->
    <style name="CardRadius">
        <item name="cornerSizeTopLeft">4%</item>
        <item name="cornerSizeTopRight">4%</item>
    </style>
    <!--image kitchen -->
    <style name="ImageKitchenDetails">
        <item name="android:layout_height">@dimen/image_kitchen_details</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--kitchen text -->
    <style name="TextKitchen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--kitchen title text -->
    <style name="TextKitchen.Title">
        <item name="android:textColor">@color/text_medium</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>

    <!--kitchen body text -->
    <style name="TextKitchen.Body">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="titleTextColor">@color/app_bar_text_color</item>
        <item name="elevation">@dimen/elevation_small</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="AppBarStroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_stroke</item>
        <item name="android:background">@color/stroke_app_bar</item>
    </style>
    <!--Detail Menu Text Style-->
    <style name="detailMenuHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>

    <style name="detailMenu">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>


    <!--Banner Style -->
    <style name="RoundedBanner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_large</item>
    </style>

    <!-- Text Style -->
    <style name="SectionHeader">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/nav_selected_text_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
    </style>

    <!--    Category Style-->
    <style name="CategoryImage">
        <item name="android:layout_width">@dimen/category_size</item>
        <item name="android:layout_height">@dimen/category_size</item>
        <item name="android:scaleType">fitXY</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="CategoryText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/work_sans_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_on_image_color</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <!--    Card Styles-->
    <style name="CardTitle">
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:textColor">@color/text_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <!-- some card -->
    <style name="selected" parent="Chips.SelectedChips">
        <item name="android:textColor">@color/mtrl_choice_chip_text_color</item>

        <item name="chipBackgroundColor">@color/mtrl_choice_chip_background_color</item>
    </style>
    <style name="CardTime">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <!--    Image Curve-->
    <style name="ImageCurve">
        <item name="cornerSizeTopRight">4%</item>
        <item name="cornerSizeTopLeft">4%</item>
    </style>


    <!-- recipes menu and random recipes -->
    <style name="CardViewRecipes">
        <item name="android:layout_width"> 0dp</item>
        <item name="android:layout_height"> 220dp</item>
        <item name="android:layout_weight"> 1</item>
        <item name="cardCornerRadius"> 12dp</item>
    </style>

    <style name="CardViewImageRecipes">
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> 164dp</item>

    </style>

    <style name="CardViewNameRecipes">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height"> 0dp</item>
        <item name="android:layout_weight"> 1</item>
        <item name="android:gravity"> start</item>

        <item name="android:textColor"> @color/text_medium</item>
        <item name="android:textSize"> @dimen/text_small</item>
        <item name="android:fontFamily"> @font/work_sans</item>
        <item name="android:layout_margin"> 8dp</item>

    </style>
    <style name="CardViewPrepareIconContainer">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart"> 8dp</item>
        <item name="android:layout_gravity"> start</item>
    </style>

    <style name="CardViewPrepareIcon">
        <item name="android:layout_width"> 16dp</item>
        <item name="android:layout_height"> 16dp</item>
        <item name="android:layout_marginStart"> 8dp</item>

    </style>

</resources>