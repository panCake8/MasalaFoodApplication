<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- button parent style-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <!-- primary button style-->
    <style name="Button.PrimaryButton">
        <item name="android:backgroundTint">@color/primary_button_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- secondary button style-->
    <style name="Button.SecondaryButton">
        <item name="android:backgroundTint">@color/background_color</item>
        <item name="strokeColor">@color/primary_button_color</item>
        <item name="strokeWidth">@dimen/small_stroke</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <!-- app bar-->
    <style name="AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:backgroundTint">@color/background_color</item>
        <item name="titleTextColor">@color/app_bar_text_color</item>
        <item name="elevation">@dimen/elevation_small</item>
        <item name="navigationIcon">@drawable/ic_back_black</item>
    </style>

    <!-- app bar stroke-->
    <style name="AppBarStroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/small_stroke</item>
        <item name="android:background">@color/stroke_app_bar</item>
    </style>

    <!--    Image Curve-->
    <style name="ImageCurve">
        <item name="cornerSize">4%</item>
    </style>

    <!--    Image Curve Large-->
    <style name="ImageCurve.Large">
        <item name="cornerSize">@dimen/radius_medium</item>
    </style>
    <!--    Image Curve-->
    <style name="RecyclerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="spanCount">2</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--    Image Parent-->
    <style name="ImageRecItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--    Image Food-->
    <style name="ImageRecItem.Food">
        <item name="android:layout_height">match_parent</item>

    </style>

    <!--    Image Kitchen-->
    <style name="ImageRecItem.Kitchen">
        <item name="android:layout_height">@dimen/img_height_kitchen</item>
    </style>

    <!--    Card Parent-->
    <style name="CardRecItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
    </style>


    <!--    Card Food-->
    <style name="CardRecItem.Food">
        <item name="android:layout_height">@dimen/card_item_food_height</item>
        <item name="android:layout_width">@dimen/card_item_kitchen_width</item>
        <item name="cardCornerRadius">@dimen/radius_medium</item>
    </style>


    <!--    Card Kitchen-->
    <style name="CardRecItem.Kitchen">
        <item name="android:layout_height">@dimen/card_item_kitchen_height</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
    </style>

    <!--    Item Text Parent-->
    <style name="ItemText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--    Item Text Name Parent-->
    <style name="ItemText.Name">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <!--    Item Text Time Parent-->
    <style name="ItemText.Time">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/dark_white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginStart">@dimen/margin_tiny</item>
        <item name="android:layout_marginRight">@dimen/margin_tiny</item>
    </style>

    <!--    Item Text Name Food-->
    <style name="ItemText.Name.Food">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textColor">@color/dark_white</item>
    </style>

    <!--    Item Text Name Kitchen-->
    <style name="ItemText.Name.Kitchen">
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <!--    Item Text Time Food-->
    <style name="ItemText.Time.Food">
        <item name="android:textColor">@color/medium_white_light</item>
        <item name="android:lineSpacingExtra">@dimen/no_width</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <!--    Item Text Time Kitchen-->
    <style name="ItemText.Time.Kitchen">
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:layout_marginBottom">@dimen/margin_text_time</item>
    </style>

    <!--    Item Icon Parent-->
    <style name="ItemIcon">
        <item name="android:layout_width">@dimen/small_icon_size</item>
        <item name="android:layout_height">@dimen/small_icon_size</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <!--    Item Icon Kitchen-->
    <style name="ItemIcon.Kitchen">
        <item name="tint">@color/medium_black</item>
    </style>

    <!--Base Image For Home And Kitchen-->
    <style name="Poster">
        <item name="android:layout_width">match_parent</item>
        <item name="shapeAppearanceOverlay">@style/ImageCurve.Large</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!--Home-->
    <style name="Poster.Home">
        <item name="android:layout_height">@dimen/food_poster_height</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <!-- chips style-->
    <style name="Chips_choice" parent="Widget.Material3.ChipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColor">@color/text_chips</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="chipCornerRadius">@dimen/radius_small</item>
        <item name="chipEndPadding">@dimen/margin_large</item>
        <item name="chipStartPadding">@dimen/margin_large</item>
        <item name="android:checkable">true</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">@dimen/small_stroke</item>
    </style>
    <!-- chips style-->
    <style name="Chips" parent="Widget.Material3.ChipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_chips</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="chipCornerRadius">@dimen/radius_small</item>
    </style>
    <!-- selected chips style-->
    <style name="Chips.SelectedChips">
        <item name="android:backgroundTint">@color/selected_chip_color</item>
    </style>

    <style name="Chips_filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
    </style>

    <!--    Card Styles-->
    <style name="CardTitle">
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="CardTime">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!-- chip color selected choice case -->
    <style name="Chips.toggle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
    </style>
    <!-- Slider -->
    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/primary_button_color</item>
    </style>

    <style name="Text">Text.TitleChips</style>

    <style name="Text.TitleChips">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="TextRecipeNameDetails">
        <item name="android:fontFamily">@font/work_sans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">16dp</item>
    </style>

    <!--Detail Menu Text Style-->
    <style name="detailMenuHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>

    <style name="detailMenu">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>


    <!--Banner Style -->
    <style name="RoundedBanner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_large</item>
    </style>

    <!-- Text Style -->
    <style name="SectionHeader">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/nav_selected_text_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
    </style>

    <!--    Category Style-->
    <style name="CategoryImage">
        <item name="android:layout_width">@dimen/category_size</item>
        <item name="android:layout_height">@dimen/category_size</item>
        <item name="android:scaleType">fitXY</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="CategoryText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/work_sans_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_on_image_color</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="CardSearch" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:elevation">@dimen/elevation_small</item>
        <item name="backgroundColor">@color/white</item>
        <item name="cornerRadius">@dimen/radius_large</item>
    </style>

    <style name="ImageSearch" parent="CardView">
        <item name="android:layout_width">@dimen/shape_image_size</item>
        <item name="android:layout_height">@dimen/shape_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/rounded_corner</item>
        <item name="shapeAppearanceOverlay">@style/CardView.Dark</item>
    </style>

    <style name="TitleSearch" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="BodySearch" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/no_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/medium_black</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--    Card Search-->
    <style name="CardRecItem.Search" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_item_food_height</item>
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>
</resources>