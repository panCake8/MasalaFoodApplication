<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/ic_arrow_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/margin_large"
        android:background="@drawable/ic_arrow_back"
        android:backgroundTint="@color/app_bar_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/icon_arrow_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_semibold"
        android:text="Quick recipes"
        android:textColor="#1C1B1F"
        android:textSize="22sp"
        android:layout_marginStart="@dimen/margin_large"
        app:layout_constraintStart_toEndOf="@id/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollable_menu"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/scrollable_menu"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"

                    app:cardCornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="164dp"

                        android:background="@drawable/quick_recipes_image"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_medium"
                        android:textSize="@dimen/text_small"
                        android:fontFamily="@font/work_sans"
                        android:layout_margin="8dp"
                        android:text="Anwana  " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:fontFamily="@font/work_sans"
                        android:textColor="@color/text_light"
                        android:text="prepare in 15m"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="164dp"
                            android:background="@drawable/quick_recipes_image"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_medium"
                            android:textSize="@dimen/text_small"
                            android:fontFamily="@font/work_sans"
                            android:layout_margin="8dp"
                            android:text="Anwana  " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_small"
                            android:fontFamily="@font/work_sans"
                            android:textColor="@color/text_light"
                            android:text="prepare in 15m"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>