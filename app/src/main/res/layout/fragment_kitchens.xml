<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.KitchensFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/kitchen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tool_bar_color"
        app:elevation="@dimen/elevation_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/kitchens"
        app:titleTextColor="@color/app_bar_text_color" />

    <View
        android:id="@+id/toolbar_stroke"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_stroke"
        android:background="@color/app_bar_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kitchen_toolbar" />

    <com.google.android.material.card.MaterialCardView
       style="@style/CardViewFood.Kitchen"
        app:layout_constraintTop_toBottomOf="@id/toolbar_stroke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_large">

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>