<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/ic_arrow_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/margin_large"
            android:background="@drawable/ic_arrow_back"
            android:backgroundTint="@color/app_bar_text_color"
            android:contentDescription="@string/icon_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_semibold"
            android:text="Just for you"
            android:textColor="#1C1B1F"
            android:textSize="22sp"
            android:layout_marginStart="@dimen/margin_large"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/scrollable_menu"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginBottom="@dimen/margin_large"
                >
                <androidx.cardview.widget.CardView

                    style="@style/CardViewRecipes"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:id="@+id/image1"
                            style="@style/CardViewImageRecipes"
                            tools:src="@drawable/chief_in_kitchen_image"

                            />
                        <TextView
                            android:id="@+id/recipe_name1"
                            tools:text="name"
                            style="@style/CardViewNameRecipes"
                            />
                        <LinearLayout
                            style="@style/CardViewPrepareIconContainer"
                            >
                            <TextView
                                android:id="@+id/prepareTime1"
                                tools:text="15m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="@font/work_sans"
                                android:textColor="@color/text_light"
                                />
                            <ImageView
                                style="@style/CardViewPrepareIcon"
                                android:src="@drawable/prepare_time"

                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_large"
                    style="@style/CardViewRecipes"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:orientation="vertical"


                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:id="@+id/image2"
                            style="@style/CardViewImageRecipes"
                            tools:src="@drawable/chief_in_kitchen_image"

                            />
                        <TextView
                            android:id="@+id/recipe_name2"
                            tools:text="name"
                            style="@style/CardViewNameRecipes"

                            />
                        <LinearLayout
                            style="@style/CardViewPrepareIconContainer"


                            >
                            <TextView
                                android:id="@+id/prepareTime2"
                                tools:text="15m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="@font/work_sans"
                                android:textColor="@color/text_light"


                                />
                            <ImageView
                                style="@style/CardViewPrepareIcon"
                                android:src="@drawable/prepare_time"

                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_large"
                >
                <androidx.cardview.widget.CardView

                    style="@style/CardViewRecipes"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:orientation="vertical"


                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:id="@+id/image3"
                            style="@style/CardViewImageRecipes"
                            tools:src="@drawable/chief_in_kitchen_image"

                            />
                        <TextView
                            android:id="@+id/recipe_name3"
                            tools:text="name"
                            style="@style/CardViewNameRecipes"

                            />
                        <LinearLayout
                            style="@style/CardViewPrepareIconContainer"


                            >
                            <TextView
                                android:id="@+id/prepareTime3"
                                tools:text="15m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="@font/work_sans"
                                android:textColor="@color/text_light"


                                />
                            <ImageView
                                style="@style/CardViewPrepareIcon"
                                android:src="@drawable/prepare_time"

                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_large"
                    style="@style/CardViewRecipes"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:id="@+id/image4"
                            style="@style/CardViewImageRecipes"
                            tools:src="@drawable/chief_in_kitchen_image"

                            />
                        <TextView
                            android:id="@+id/recipe_name4"
                            tools:text="name"
                            style="@style/CardViewNameRecipes"
                            />
                        <LinearLayout
                            style="@style/CardViewPrepareIconContainer"
                            >
                            <TextView
                                android:id="@+id/prepareTime4"
                                tools:text="15m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="@font/work_sans"
                                android:textColor="@color/text_light"
                                />
                            <ImageView
                                style="@style/CardViewPrepareIcon"
                                android:src="@drawable/prepare_time"

                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_large"
                >
                <androidx.cardview.widget.CardView

                    style="@style/CardViewRecipes"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:orientation="vertical"


                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:id="@+id/image5"
                            style="@style/CardViewImageRecipes"
                            tools:src="@drawable/chief_in_kitchen_image"

                            />
                        <TextView
                            android:id="@+id/recipe_name5"
                            tools:text="name"
                            style="@style/CardViewNameRecipes"

                            />
                        <LinearLayout
                            style="@style/CardViewPrepareIconContainer"


                            >
                            <TextView
                                android:id="@+id/prepareTime5"
                                tools:text="15m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="@font/work_sans"
                                android:textColor="@color/text_light"


                                />
                            <ImageView
                                style="@style/CardViewPrepareIcon"
                                android:src="@drawable/prepare_time"

                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/margin_large"
                    style="@style/CardViewRecipes"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="8dp"
                        android:orientation="vertical"


                        >
                        <ImageView
                            android:scaleType="centerCrop"
                            android:id="@+id/image6"
                            style="@style/CardViewImageRecipes"
                            tools:src="@drawable/chief_in_kitchen_image"

                            />
                        <TextView
                            android:id="@+id/recipe_name6"
                            tools:text="name"
                            style="@style/CardViewNameRecipes"

                            />
                        <LinearLayout
                            style="@style/CardViewPrepareIconContainer"


                            >
                            <TextView
                                android:id="@+id/prepareTime6"
                                tools:text="15m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_small"
                                android:fontFamily="@font/work_sans"
                                android:textColor="@color/text_light"


                                />
                            <ImageView
                                style="@style/CardViewPrepareIcon"
                                android:src="@drawable/prepare_time"

                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>