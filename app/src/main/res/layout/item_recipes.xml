<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="157dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_large"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_recipe1"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:scaleType="centerInside"
            tools:src="@drawable/quick_recipes_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/recipe_name1"
            android:layout_width="match_parent"
            android:layout_height ="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_medium"
            android:textSize="@dimen/text_small"
            android:fontFamily="@font/work_sans"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            tools:text="name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_recipe1"/>
        <TextView
            android:id="@+id/prepareTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_small"
            tools:text="15m"
           android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:src="@drawable/prepare_time"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintStart_toEndOf="@id/prepareTime1"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>