<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_large"
    tools:context=".ui.DetailsKitchenFragment"
    tools:ignore="RtlSymmetry">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/details_toolbar"
        style="@style/AppBar"
        app:title="@string/kitchens" />

    <View
        android:id="@+id/toolbar_stroke"
        style="@style/AppBarStroke" />

    <ImageView
        android:id="@+id/details_img_poster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/details_kitchen_poster_height"
        android:layout_marginTop="@dimen/margin_medium"
        android:contentDescription="@string/img_description"
        android:scaleType="fitXY"
        android:src="@drawable/poster" />

    <TextView
        android:id="@+id/scroll_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/margin_large"
        android:fontFamily="@font/work_sans_semibold"
        android:text="@string/popular_dishes"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_large" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_medium"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/white"
            android:orientation="vertical">

