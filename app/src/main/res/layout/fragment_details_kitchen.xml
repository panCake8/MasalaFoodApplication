                            style="@style/ImageKitchenDetails"
                            android:contentDescription="@string/img_description"
                            android:src="@drawable/chief_image"
                            app:shapeAppearanceOverlay="@style/ImageCurve" />

                        <TextView
                            android:id="@+id/title_one"
                            style="@style/TextKitchen.Title"
                            android:text="Pizza"
                            android:textSize="@dimen/text_large" />

                        <TextView
                            android:id="@+id/info_one"
