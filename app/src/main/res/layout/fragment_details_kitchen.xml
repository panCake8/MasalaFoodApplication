<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DetailsKitchenFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/kitchen_toolbar"
        style="@style/AppBar"
        app:title="@string/kitchens" />

    <View
        android:id="@+id/toolbar_stroke"
        style="@style/AppBarStroke" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/details_img_poster"
        style="@style/Poster.Kitchen"
        android:contentDescription="@string/img_description"
        android:src="@drawable/poster" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/popular_dishes"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/text_medium" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_kitchen"
        style="@style/RecyclerStyle"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_kitchen" />
</LinearLayout>