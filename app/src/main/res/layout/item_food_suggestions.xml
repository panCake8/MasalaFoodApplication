<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radius_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_medium">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recipe_card"
        android:layout_width="@dimen/food_poster_height"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_recipe"
            style="@style/ImageRecItem"
            android:layout_height="@dimen/card_item_food_height"
            android:contentDescription="@string/img_description"
            android:foreground="@color/foreground_img_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/quick_recipes_image" />

        <TextView
            android:id="@+id/recipe_name"
            style="@style/ItemText.Name.Food"
            android:paddingEnd="@dimen/padding_large"
            app:layout_constraintBottom_toTopOf="@+id/prepareTime"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="name" />



        <TextView
            android:id="@+id/prepareTime"
            style="@style/ItemText.Time.Food"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="4dp"
            tools:text="15m" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>