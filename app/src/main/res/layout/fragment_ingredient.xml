<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_ingredient"
        style="@style/AppBar"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/ingredient" />
    <View
        android:id="@+id/toolbar_stroke_ingredient"
        style="@style/AppBarStroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@id/toolbar_ingredient" />

   <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_checkbox_ingredient"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:nestedScrollingEnabled="true"
    tools:listitem="@layout/item_image_ingredient"
    android:layout_marginTop="@dimen/margin_large"
    app:layout_constraintTop_toBottomOf="@id/toolbar_stroke_ingredient"
     app:layout_constraintBottom_toTopOf="@id/button_next"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
    />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_next"
        style="@style/Button.PrimaryButton"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>