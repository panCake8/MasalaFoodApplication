                                app:layout_constraintTop_toBottomOf="@id/sug_tv_dinner_nameFood_3"
                                tools:text="@tools:sample/lorem" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

