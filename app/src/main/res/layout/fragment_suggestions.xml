                                android:layout_height="@dimen/suggestions_card_image_height"
                                android:scaleType="fitXY"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@tools:sample/backgrounds/scenic" />
                            <TextView
                                android:id="@+id/sug_tv_break_nameFood_1"
                                style="@style/CardTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:paddingHorizontal="@dimen/padding_medium"
                                app:layout_constraintTop_toBottomOf="@id/sug_iv_break_imageFood_1"
                                tools:text="@tools:sample/lorem" />
                            <TextView
                                android:id="@+id/sug_tv_break_details_1"
                                style="@style/CardTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:paddingHorizontal="@dimen/padding_medium"
                                app:layout_constraintTop_toBottomOf="@id/sug_tv_break_nameFood_1"
                                tools:text="@tools:sample/lorem" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

